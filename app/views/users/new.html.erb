<h1>Register here</h1>

<%= form_for @user do |f| %>
 <% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
  <p><%= f.label :name %>
    <%= f.text_field :name %>
   </p>

   <p>
   	<%= f.label :email %>
   	<%= f.text_field :email %>
   </p>
   <p>
   	<%= f.label :phone %>
   	<%= f.text_field :phone %>
   </p>
   <%= f.submit %>

   <% end %>